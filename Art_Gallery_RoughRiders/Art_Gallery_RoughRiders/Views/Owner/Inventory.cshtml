@model List<Art_Gallery_RoughRiders.ViewModels.InventoryViewModel>
@{
    ViewBag.Title = "Inventory";
}

<h2>Inventory</h2>
<table>
    <tr>
        <td>
            <a href="@Url.Action("Accounting", "Owner")" class="thumbnail">Accounting</a>
        </td>
        <td>
            @Html.ActionLink("Add Art Piece", "AddPainting")
        </td>
    </tr>
</table>

<div class="container">
    <div class="row">
        <div class="col-md-2"><h3>Artist:</h3></div>
        <div class="col-md-2"><h3>Title:</h3> </div>
        <div class="col-md-2"><h3>Edition:</h3> </div>
        <div class="col-md-1"><h3>Cost:</h3></div>
        <div class="col-md-1"><h3>Retail:</h3></div>
        <div class="col-md-1"><h3>IMG:</h3></div>
        <div class="col-md-1"><h3>Sell Art:</h3></div>
        <div class="col-md-1"><h3>Sold:</h3></div>
    </div>
</div>



<div class="container">
    @foreach (var item in Model)
    {
        <div class="row">
            <div class="col-md-2">@Html.DisplayFor(modelItem => item.Artist)</div>
            <div class="col-md-2">@Html.DisplayFor(modelItem => item.ArtWorkTitle) </div>
            <div class="col-md-2">@Html.DisplayFor(modelItem => item.Edition)</div>
            <div class="col-md-1">@Html.DisplayFor(modelItem => item.ArtGalleryCost)</div>
            <div class="col-md-1">@Html.DisplayFor(modelItem => item.ArtPiecePrice)</div>
            <div class="col-md-1"><a href='@Html.DisplayFor(modelItem => item.IMG)'>IMG</a></div>
            <div class="col-md-1">@if (!item.boolIsSold)
            {
                <button class="button">@Html.ActionLink("Sell", "SignUp", new { artId = item.IdArtPiece })</button>
            }
            </div>
            <div class="col-md-1">@Html.DisplayFor(modelItem => item.isSold)</div>
        </div>
    }
</div>


